<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b24c81"
    tools:context=".MainActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_irLogin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="350dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:padding="20dp"
            android:background="@drawable/user"
            android:onClick="onCLick" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MusicApp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536" />

    <EditText
        android:id="@+id/et_Codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/redondeado"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/txtInvitacion"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#575656"
        app:layout_constraintBottom_toTopOf="@+id/btn_Ingresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Titulo"
        app:layout_constraintVertical_bias="0.662" />

    <Button
        android:id="@+id/btn_Ingresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/redondeado2"
        android:onClick="guitarra"
        android:textColor="#FFFFFF"
        android:typeface="monospace"
        tools:text="Ingresar" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bateria1"
        tools:layout_editor_absoluteX="0dp" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>